extends ../../layout/default.pug
include ../../mixins/alert.pug
block main
    +alert-success(5000)
    +alert-error(5000)
    .container.my-5
        .row.justify-content-center 
            .col-8  
                h1(class="text-center") Nhập mã xác nhận 
                form(action="/user/password/otp", method="post")
                    div(class="form-group")
                        label(for="email")
                        input(type="email" class="form-control" value=email readonly name="email" placeholder="Email" required)
                    div(class="form-group")
                        label(for="otp")
                        input(type="number" class="form-control" name="otp" placeholder="nhập mã xác thực" required)
                    div(class="form-group")
                        button(class="btn btn-primary btn-block mt-4" type="submit") Gửi

