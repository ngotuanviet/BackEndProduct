extends ../../layout/default
include ../../mixins/box-head.pug 
block main
    
    .container.my-3 
        .row 
            .col-12 
                +box-head("Danh sách sản phẩm")
        .row 
            each product in products 
                .col-4.mb-3
                    .product-item 
                        a(href=`/products/${product.slug}`) 
                            .inner-image 
                                img(
                                    src=product.thumbnail
                                    alt=product.title)
                            .inner-content 
                                h3.inner-title #{product.title}
                                .inner-price-new #{product.priceNew}đ
                                .inner-price-old #{product.price}
                                .inner-discount -#{product.discountPercentage}%