include ../../layout/default
include ../../mixins/box-head
block main 
    .container.my-3 
        include ../../partials/list-btn-users.pug
        .row 
            .col-12 
                +box-head("Danh sách lời mời đã nhận")
        div(class="row" data-users-accept=user.id)
            if (users)
                each user in users
                    div(class="col-6" user-id=user.id)
                        div(class="box-user"  )
                            div(class="inner-avatar")
                                img(src=user.avatar ? user.avatar : "/img/default-avatar.jpg", alt=user.fullName)
                            div(class="inner-info")
                                div(class="inner-name") #{user.fullName}
                                div(class="inner-buttons")
                                    button(class="btn btn-sm btn-primary me-1" btn-accept-friend=user.id) Chấp nhận
                                    button(class="btn btn-sm btn-secondary me-1" btn-refuse-friend=user.id) Xoá
                                    button(class="btn btn-sm btn-secondary me-1" btn-deleted-friend=user.id disabled) Đã xoá
                                    button(class="btn btn-sm btn-primary me-1" btn-accepted-friend=user.id disabled) Đã Chấp nhận
    block script 
        script(src="/js/users.js")