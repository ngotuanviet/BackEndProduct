extends ../../layout/default
include ../../mixins/box-head
block main
    .container.my-3 
        .row 
            .col-12 
                +box-head("Chat")
        .row
            .col-12
                .card.chat
                    .card-body.chat-body(style="height: 400px; overflow-y: auto;")
                        .message.d-flex.flex-row.justify-content-start.mb-4
                            .p-3.ms-3(style="border-radius: 15px; background-color: rgba(57, 192, 237,.2);")
                                p.small.mb-0 Hello! How can I help you today?
                        .message.d-flex.flex-row.justify-content-end.mb-4
                            .p-3.me-3.border(style="border-radius: 15px; background-color: #fbfbfb;")
                                p.small.mb-0 I have a question about my order.
                    .card-footer.text-muted.p-3
                        form.d-flex.justify-content-start.align-items-center(action="#") 
                            input.form-control(type="text" placeholder="Type message")
                            button.btn.btn-primary.ms-3(type="submit") 
                                svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16")
