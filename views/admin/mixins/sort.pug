mixin sort()
    div(sort)
        select(
            class="form-control"
            name="sort"
            sort-select
        )
            option(value="position-desc")  Mới nhất
            option(value="position-asc")  Cũ nhất
            option(value="title-asc")  Tên A-Z
            option(value="title-desc")  Tên Z-A
            option(value="price-asc")  Giá thấp đến cao
            option(value="price-desc")  Giá cao đến thấp
        button(
            class="btn btn-danger mt-2"
            sort-clear) Clear