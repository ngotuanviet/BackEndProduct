extends ../../layout/default.pug
block main 
    h1 Danh sách sản phẩm

    table.table.table-hover.table-sm 
        thead 
            tr 
                th STT
                th Hình ảnh
                th Tên sản phẩm
                th Giá
                th Trạng thái
                th Thao tác
        tbody
            each product,index in products
                tr 
                    td #{index + 1}
                    td 
                        img(src=product.thumbnail, alt="Product Image" width="100" height="auto")
                    td(style="width: 200px") #{product.title}
                    td #{product.price}đ
                    td
                        a(href="#" class=product.status === "active" ? "badge rounded-pill text-bg-success text-decoration-none" : "badge rounded-pill text-bg-warning text-decoration-none") #{product.status === "active" ? 'Hoạt động' : 'Ngừng hoạt động'}
                    td 
                        a.btn.btn-warning.btn-sm(href="#") Sửa
                        a.btn.btn-danger.btn-sm.ml-2(href="#") Xóa
            