extends ../../layout/default.pug
include ../../mixins/filtersStatus
block main 
    h1 Danh sách sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row
                .col-6
                   +filtersStatus(filtersStatus)
                .col-6
                    form(id="searchForm", action="/admin/products")
                        .input-group.mb-3
                            input.form-control(type="text", name="keyword", placeholder="Tìm kiếm sản phẩm" value=keyword) 
                            button.btn.btn-outline-secondary(type="submit") Tìm kiếm
    .card.mb-3 
    .card-header Danh sách sản phẩm
    .card-body 
        table.table.table-hover.table-sm 
            thead 
                tr 
                    th STT
                    th Hình ảnh
                    th Tên sản phẩm
                    th Giá
                    th Trạng thái
                    th Thao tác
            tbody
                each product,index in products
                    tr 
                        td #{index + 1}
                        td 
                            img(src=product.thumbnail, alt="Product Image" width="100" height="auto")
                        td(style="width: 200px") #{product.title}
                        td #{product.price}đ
                        td
                            if(product.status === "active")
                                span.badge.rounded-pill.text-bg-success Hoạt động
                            else
                                span.badge.rounded-pill.text-bg-warning Ngừng hoạt động
                        td 
                            a.btn.btn-warning.btn-sm(href="#") Sửa
                            a.btn.btn-danger.btn-sm.ml-2(href="#") Xóa
                